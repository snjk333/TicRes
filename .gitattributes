# Auto detect text files and perform LF normalization
* text=auto

# Maven wrapper scripts
/mvnw text eol=lf
**/mvnw text eol=lf

# Windows scripts
*.cmd text eol=crlf
*.bat text eol=crlf

# Shell scripts
*.sh text eol=lf

# Java sources
*.java text diff=java
*.kt text diff=kotlin
*.groovy text diff=java
*.scala text diff=java

# Properties files
*.properties text
*.yml text
*.yaml text
*.xml text
*.json text

# SQL files
*.sql text

# Documentation
*.md text
*.txt text

# Binary files
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar.gz binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
